{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "networkingDeployment",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat('https://<your-storage-url>/networking-template.json')]"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "computeDeployment",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat('https://<your-storage-url>/compute-template.json')]"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "storageDeployment",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat('https://<your-storage-url>/storage-template.json')]"
        }
      }
    }
  ]
}
